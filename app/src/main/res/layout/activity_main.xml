<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textVolumen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volumen"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="40dp"
        />

    <SeekBar
        android:id="@+id/seekBarVolumen"
        android:layout_width="401dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textVolumen" />

    <TextView
        android:id="@+id/textAlarma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarma"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBarVolumen"
        android:textSize="40dp"
        />

    <SeekBar
        android:id="@+id/seekBarAlarma"
        android:layout_width="401dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textAlarma" />
    <TextView
        android:id="@+id/textNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notificaciones"
        tools:layout_editor_absoluteX="79dp"
        tools:layout_editor_absoluteY="95dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/seekBarAlarma"
        android:textSize="40dp"
        />
    <SeekBar
        android:id="@+id/seekBarNot"
        android:layout_width="401dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textNot" />


    <Switch
        android:id="@+id/switch2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aplicar para llamadas"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="318dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarNot"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"

        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="44dp"
        android:background="@color/white"
        android:drawableTop="@drawable/bell"
        android:text="Notification"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/switch2"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="115dp" />

</androidx.constraintlayout.widget.ConstraintLayout>